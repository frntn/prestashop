{
	"name": "PHP & MariaDB",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "forwardPorts": [80, 3306],
	"postCreateCommand": "sleep 10 && chown -R www-data:www-data /var/www/html/modules/ && /workspaces/${localWorkspaceFolderBasename}/.docker/docker_run_git.sh | tee /workspaces/${localWorkspaceFolderBasename}/postCreateCommand.log",

	// Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php"
      },
      "extensions": [
        "xdebug.php-debug",
        "bmewburn.vscode-intelephense-client",
        "mrmlnc.vscode-apache"
      ]
    }
	},

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}
